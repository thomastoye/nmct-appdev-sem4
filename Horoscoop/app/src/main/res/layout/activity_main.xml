<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uw gegevens"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextNaam"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView"
        android:text="Naam" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextVoornaam"
        android:layout_below="@+id/editTextNaam"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="Voornaam" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecteer uw geboortejaar"
        android:id="@+id/buttonGeboortejaar"
        android:layout_below="@+id/editTextVoornaam"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editTextVoornaam" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecteer uw horoscoop"
        android:id="@+id/buttonHoroscoop"
        android:layout_below="@+id/buttonGeboortejaar"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/buttonGeboortejaar" />
</RelativeLayout>
